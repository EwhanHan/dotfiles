{
  //! terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never", //getting rid of small white dot in integrated terminal

  //! workbench
  "workbench.tips.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.startupEditor": "none",
  "workbench.reduceMotion": "on",
  "workbench.editor.enablePreview": false, // open file on single click
  "workbench.layoutControl.enabled": false,

  //! theme
  "workbench.colorTheme": "One Dark Pro",
  "window.autoDetectColorScheme": false,
  "workbench.preferredDarkColorTheme": "Dracula",
  "workbench.preferredLightColorTheme": "One Dark Pro",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",

  //! editor
  "editor.fontLigatures": true,
  "editor.fontFamily": "Input Mono, Fira Code, monospace, Menlo",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.accessibilitySupport": "off",
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontSize": 14,

  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontalScrollbarSize": 9,
  "editor.scrollbar.verticalScrollbarSize": 9,

  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true, // auto update tags

  "editor.wordWrap": "wordWrapColumn", // default is off

  //! formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  //! notifications
  "window.dialogStyle": "custom", // * not sure about this one
  // "window.nativeTabs": true, // this is great, macOS only
  // "window.titleBarStyle": "native",

  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  //! suggestion
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggest.localityBonus": true,
  "editor.snippetSuggestions": "top",

  //! emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "html"
  },
  "emmet.showSuggestionsAsSnippets": true,

  //! language specific
  "python.defaultInterpreterPath": "/usr/bin/python3",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //! telemetry
  "telemetry.telemetryLevel": "off",
  "code-runner.enableAppInsights": false,

  //! python
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },

  //! extensions
  "tailwindCSS.includeLanguages": {
    "plaintext": "javascript"
  },

  "cSpell.allowCompoundWords": true,
  "cSpell.userWords": [
    "clsx",
    "describedby",
    "nums",
    "Pokedex",
    "setuser",
    "Spoonacular",
    "Synogram"
  ],
  "cSpell.enableFiletypes": ["!json", "!jsonc", "!json5"],

  "eslint.quiet": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],

  "prettier.singleQuote": true,

  "extensions.autoUpdate": "onlyEnabledExtensions",

  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  // title bar inline
  "window.titleBarStyle": "native",
  "customizeUI.titleBar": "inline",
  "customizeUI.activityBar": "bottom",

  // shell-format
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "Lua.telemetry.enable": false,
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  }
}
