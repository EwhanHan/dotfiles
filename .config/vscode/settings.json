{
  //! theme / visual
  "workbench.colorTheme": "One Dark Pro",
  "window.autoDetectColorScheme": false,
  "workbench.preferredDarkColorTheme": "Dracula",
  "workbench.preferredLightColorTheme": "One Dark Pro",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.fontAliasing": "antialiased",
  "workbench.sideBar.location": "right",

  //! terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never", //getting rid of small white dot in integrated terminal

  //! workbench
  "workbench.tips.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.startupEditor": "none",
  "workbench.reduceMotion": "on",
  "workbench.editor.enablePreview": false, // open file on single click
  "workbench.layoutControl.enabled": false,
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.tree.indent": 10,
  "workbench.tree.expandMode": "singleClick",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.labelFormat": "short",

  //! editor
  "editor.fontLigatures": true,
  "editor.fontFamily": "Input Mono, Fira Code, monospace, Menlo",
  "editor.tabSize": 2,
  "editor.cursorSmoothCaretAnimation": true, // must have
  "editor.fontSize": 15,
  "editor.smoothScrolling": true,

  "editor.find.addExtraSpaceOnTop": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.accessibilitySupport": "off",

  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "wordWrapColumn", // default is off
  "editor.cursorStyle": "block",

  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontalScrollbarSize": 9,
  "editor.scrollbar.verticalScrollbarSize": 9,

  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true, // auto update tags

  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.renderWhitespace": "boundary",

  "editor.rulers": [80],

  //! suggestion
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggest.localityBonus": true,
  "editor.snippetSuggestions": "top",
  "editor.quickSuggestions": {
    "strings": true
  },

  //! notifications
  "window.dialogStyle": "custom", // * not sure about this one
  "window.commandCenter": true,

  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true,
    "**/build": true
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.sortOrder": "type",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": false,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true,
    "**/.ipynb_checkpoints": true,
    "**/build": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },

  //! Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",

  //! emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "html"
  },
  "emmet.showSuggestionsAsSnippets": true,

  //! formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  //! language specific
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //? not sure if these are any good
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "typescript.format.insertSpaceAfterTypeAssertion": true,
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": true,

  //! telemetry
  "telemetry.telemetryLevel": "off",
  "code-runner.enableAppInsights": false,

  //! python
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },

  //! extensions
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,

  "tailwindCSS.includeLanguages": {
    "plaintext": "javascript"
  },

  //! extension specific
  "cSpell.allowCompoundWords": true,
  "cSpell.userWords": [
    "clsx",
    "describedby",
    "nums",
    "Pokedex",
    "setuser",
    "Spoonacular",
    "Synogram"
  ],
  "cSpell.enableFiletypes": ["!json", "!jsonc", "!json5"],

  //! eslint
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.quiet": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],

  "prettier.singleQuote": true,

  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },

  // shell-format
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "Lua.telemetry.enable": false,
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },

  "autoDocstring.startOnNewLine": true,

  "npm-intellisense.importES6": true,
  "npm-intellisense.importQuotes": "'",
  "npm-intellisense.importLinebreak": ";\r\n",
  "npm-intellisense.importDeclarationType": "const",
  "npm-intellisense.scanDevDependencies": true
}
